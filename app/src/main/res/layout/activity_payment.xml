<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="paymentviewmodel"
                type="com.smartprotech.gwallet.ui.home.PaymentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_height="match_parent"
            android:layout_width="match_parent">


        <EditText
                android:id="@+id/idEdtAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={paymentviewmodel.amount}"

                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="20dp" />

        <Button
                android:id="@+id/idBtnPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/idEdtAmount"
                android:layout_margin="20dp"
                android:textSize="15dp"
                android:onClick="@{(v)-> paymentviewmodel.payment(v)}"
                android:text="Pay using RazorPay" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>


